$aclAllow = new Zre_Dataset_Acl_Allow();
$data = $aclAllow->listAll(null, array('order' => 'acl_allow_id ASC'));

foreach($data as $index => $entry) {
	if (isset($entry['resources'])) {
		$data[$index]['resources'] = unserialize($entry['resources']);
