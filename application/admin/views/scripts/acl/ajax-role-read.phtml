$vars = $this->getVars();
$params = $vars['params'];

$id = $params['id'];
$aclRole = new Zre_Dataset_Acl_Role();
$rows = $aclRole->read( $id );

foreach($rows as $index => $entry) {
	if (isset($entry['parents'])) {
		$rows[$index]['parents'] = unserialize($entry['parents']);
	}
}

echo Zend_Json::encode( $rows );
